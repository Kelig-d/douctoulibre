{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{% if app.request.method == 'POST' %}
    <div>
        {% if medecins | length == 0 %}
            <h4>Aucun résulat pour votre recherche.</h4>
           {% else %}
               <h3 class="mt-3">Vos résulats de recherche :</h3>
               {% for medecin in medecins %}
               <a href="{{path('medecin_page', {'medecinId': medecin.id})}}">
                <div class="bg-white my-12 pb-6 w-full justify-center items-center overflow-hidden md:max-w-sm rounded-lg shadow-sm mx-auto">
                    <div class="relative h-40">
                    </div>
                    <div class="relative shadow mx-auto h-24 w-24 -my-12 border-white rounded-full overflow-hidden border-4">
                    </div>
                    <div class="mt-16">
                        <h1 class="text-lg text-center font-semibold">
                        {{(medecin.sexe == 1) ? 'M. ' :'Mme. ' }}{{medecin.nom}} {{medecin.prenom}}
                        </h1>
                        <p class="text-sm text-gray-600 text-center">
                            {{medecin.laSpecialite.libelle}}
                        </p>
                    </div>
                    <div class="mt-6 pt-3 flex flex-wrap mx-6 border-t">
                        <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
                        Prends la carte vitale : {{(medecin.carteVitale == 1) ? 'oui' : 'non'}}
                        </div>
                        <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
                        Adresse : {{ medecin.adresse}} {{medecin.cp}} {{medecin.ville}}
                        </div>
                        <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
                        Telephone : {{medecin.telephone}}
                        </div>
                        <div class="text-xs mr-2 my-1 uppercase tracking-wider border px-2 text-indigo-600 border-indigo-600 hover:bg-indigo-600 hover:text-indigo-100 cursor-default">
                        Description : {{medecin.description}}
                        </div>
                    </div>
                    </div>
                </a>
              {% endfor %}
          {% endif %}
     </div>
{% endif %}
</div>
{% endblock %}
